<Window x:Class="SwitchThemeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SwitchThemeWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" 
        Style="{DynamicResource WindowStyle}">
    <StackPanel>
        <ComboBox x:Name="styleBox" SelectionChanged="ThemeChange" />
        <Button Content="Hello WPF" Style="{DynamicResource ButtonStyle}" />
        <TextBlock Text="Windows Presentation Foundation" Style="{DynamicResource TextBlockStyle}" />
    </StackPanel>
</Window>
